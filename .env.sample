# Sample environment variables for the bot
BOT_TOKEN=your_telegram_bot_token_here
DATABASE_URL=postgres://user:password@localhost:5432/yourdb

# Comma-separated Telegram user IDs for bot admins (e.g. 123456789,987654321)
ADMINS=123456789

# Admin WhatsApp number in international format without plus, used in notification links
ADMIN_WHATSAPP_NUMBER=15551234567

# Optional: base URL where uploaded files are accessible (if you host the uploads folder)
FILES_BASE_URL=https://yourdomain.com/uploads
